<div class="flex--profile">
  <% if user.profile.exists? %>
    <%= image_tag(user.profile.url(:square), :class => "profile_img") %>
  <% else %>
    <%= image_tag("profile_image.jpg", :class => "profile_img") %>
  <% end %>
  <div class="info">
    <h2 style="margin-bottom: 5px;">
      <%= link_to(user.full_name, user) %>
    </h2>
    <% if user.editor? %>
      <span class="editor_status">Editor · <%= @editor_reviews_cnt %> edited articles · <%= @editor_pitches_cnt %> pitched topics · <%= @writers_helped_cnt %> writers helped  </span>
    <% elsif user.partner? %>
      <span class="editor_status">Partner Account with The Teen Magazine</span>
    <% end %>
    <% if (user.description != "" && user.description != nil) %>
      <p class="description_user" style="margin-top: 5px;"><%= user.description %></p>
    <% end %>
    <div class="website">
      <% if (user.website != "" && user.website !=  nil) %>
         <p class="website_link"><span>Website: </span><a href="https://www.<%= user.website %>" target="_blank"><%= user.website %></a></p>
      <% end %>
      <% if (user.twitter != "" && user.twitter !=  nil) %>
         <p class="website_link"><a href="https://www.twitter.com/<%= user.twitter %>" target="_blank">
