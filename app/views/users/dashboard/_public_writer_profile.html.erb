<br>
<div style="max-width: 840px; margin: 0 auto;">
  <div id="background" style="max-width: 800px; margin: 0 15px;">
    <%= render :partial => 'profile', locals: {user: @user} %>
  </div>
</div>
<div class="category">
  <div class="category--show">
    <div class="other--articles">
      <div class="flex">
        <div class="container">
          <% @user_posts_approved.each do |post| %>
            <div class="thumbnail">
              <div class="container--image">
                <%=link_to(image_tag(post.thumbnail.variant(resize_to_fill: [540,340], format: 'webp'), :class => "image_thumbnail"), post )%>
              </div>
              <div class="thumbnail--container">
                <p class="date_post_preview"><%= post.category.name %></p>
                <h3 class="article_title"><%= link_to post.title, post %></h3>
                <p class="date_post_preview"><%= date_to_words(post.publish_at) %></p>
              </div>
            </div>
          <% end %>
        </div>
        <a class="apply" href="/apply" target="blank">
        </a>
      </div>
    </div>
    <div class="mb-3 mt-3">
      <%== pagy_nav(@pagy).html_safe %>
    </div>
  </div>
</div>
