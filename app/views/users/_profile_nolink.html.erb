<div class="flex--profile">
  <% if @user.profile.exists? %>
    <%= image_tag(@user.profile.url(:square), :class => "profile_img") %>
  <% else %>
    <%= image_tag("profile_image.jpg", :class => "profile_img") %>
  <% end %>
  <div class="info">
    <h2 style="margin-bottom: 5px;">
      <%= @user.full_name %>
    </h2>
    <% if @user.editor? %>
      <%= render_async_cache get_editor_stats_path(id: @user) %>
    <% end %>
    <% if (@user.description != "" && @user.description != nil) %>
      <p class="description_user" style="margin-top: 5px;"><%= @user.description %></p>
    <% end %>
    <div class="website">
      <% if (@user.website != "" && @user.website !=  nil) %>
         <p class="website_link"><span>Website: </span><a class="link_grn" href="https://www.<%= @user.website %>" target="_blank"><%= @user.website %></a></p>
      <% end %>
      <% if (@user.twitter != "" && @user.twitter !=  nil) %>
         <p class="website_link"><a href="https://www.twitter.com/<%= @user.twitter %>" target="_blank"><i class="fab fa-sm fa-twitter"></i></a></p>
      <% end %>
      <% if (@user.insta != "" && @user.insta != nil) %>
         <p class="website_link"><a href="https://www.instagram.com/<%= @user.insta %>" target="_blank" style="padding-right: 4px;"><i class="fab fa-sm fa-instagram"></i></a>
      <% end %>
      <% if (@user.facebook != "" && @user.facebook !=  nil) %>
         <p class="website_link"><a href="https://www.facebook.com/<%= @user.facebook %>" target="_blank" style="padding-left: 5px;"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></p>
      <% end %>
      <% if (@user.youtube != "" && @user.youtube != nil) %>
         <p class="website_link"><a href="https://www.youtube.com/<%= @user.youtube %>" target="_blank"><i class="fa fa-youtube" aria-hidden="true"></i></a></p>
      <% end %>
    </div>
  </div>
</div>
