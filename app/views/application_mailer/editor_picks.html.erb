<style type="text/css">
  .content_wrapper {
    max-width:670px;
    background:#fff;
    border-radius:3px;
    text-align:center;
    -webkit-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);
    -moz-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);
    box-shadow:0 6px 18px 0 rgba(0,0,0,.06);
  }
  .content p {
      color:#455056;
      font-size:15px;
      font-family: 'Rubik',sans-serif;
      line-height:24px;
      margin: 12px 0;
      text-align: left !important;
  }
  .bottom_links a {
    font-family: 'Open Sans', sans-serif !important;
    text-decoration: underline !important;
  }
  .bottom_links a:hover, .content a:hover {
    text-decoration: underline !important;
  }
  .padding {
    padding:0 35px;
  }
  .content img {
    max-width: 100%;
    height: auto !important;
  }
  .ctgry_section {
    width: 100%;
  }
  .ctgry_article img {
    width: 100%;
    height: auto;
  }
  .ctgry_article h1 {
    margin: 0;
    margin-top: 10px;
    font-size: 22px;
    font-family: "Lucitana";
    font-weight: 400;
  }
  .ctgry_article a {
    color: black;
    text-decoration: none;
  }
  .ctgry_article a:hover {
    text-decoration: none !important;
  }
  .profile_img {
      margin-right: 5px;
      min-width: 40px !important;
      max-width: 40px !important;
      max-height: 40px !important;
      border-radius: 50%;
  }
  @media only screen and (max-width: 640px) {
    .padding {
      padding: 0 15px;
    }
    .content_wrapper {
      border-radius: 15px;
    }
  }
</style>
<div marginheight="0" topmargin="0" marginwidth="0" style="margin: 0px; background-color: #ecf8f7;" leftmargin="0">
  <!--100% body table-->
  <table cellspacing="0" border="0" cellpadding="0" width="100%" bgcolor="#ecf8f7"
        style="@import url(https://fonts.googleapis.com/css?family=Rubik:300,400,500,700|Open+Sans:300,400,600,700); font-family: 'Open Sans', sans-serif;">
    <tr>
      <td>
        <table style="background-color: #ecf8f7; max-width:670px;  margin:0 auto;" width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
          <tr>
            <td style="height:80px;">&nbsp;</td>
          </tr>
          <tr>
            <td style="text-align:center;">
              <a href="https://www.theteenmagazine.com" title="logo" target="_blank">
                <img width="300" src="https://mcusercontent.com/5c2a24e15a906f29e2c6a9b72/images/89bcbe0f-d6de-4a58-a3c5-e76c427282bf.png" title="logo" alt="logo">
              </a>
            </td>
          </tr>
          <tr>
            <td style="height:20px;">&nbsp;</td>
          </tr>
          <tr>
            <td align="center">
              <table class="content_wrapper" width="100%" border="0" cellpadding="0" cellspacing="0">
                <tr>
                  <td style="height:40px;">&nbsp;</td>
                </tr>
                <tr class='content'>
                  <td class="padding">
                    <% if @newsletter.header.present? %>
                      <h1 style="color:#1e1e2d; font-weight:500; margin:0;font-size:32px;font-family:'Charter', 'Rubik',sans-serif;">
                        <%= @newsletter.header %>
                      </h1>
                      <span style="display:inline-block; vertical-align:middle; margin:29px 0 26px; border-bottom:1px solid #cecece; width:100px;"></span>
                    <% end %>
                    <%= markdown @newsletter.message %>
                    <div style="display: flex;flex-direction: column;width: 100%;margin: 0 auto;justify-content: space-between;">
                      <% @posts.each do |post| %>
                        <div class="ctgry_article">
                          <%=link_to(image_tag(post.thumbnail.variant(resize_to_fill: [540,340], format: 'webp'), alt: post.title, style: "width: 100%;height: auto;"), post )%>
                          <h1 style="margin: 0;margin-top: 10px;font-size: 22px;font-family: 'Lucitana';font-weight: 400;"><%= link_to post.title, post %></h1>
                          <div>
                            <div class="author d-table-cell align-middle">
                              <% @profile = post.user.profile.attached? ? post.user.profile.variant(resize_to_fill: [100,100]) : "profile_image.jpg" %>
                              <%= image_tag(@profile, :style => "margin-right: 5px;min-width: 40px !important;max-width: 40px !important;max-height: 40px !important;border-radius: 50%;") %>
                              <%= link_to(post.user.full_name, post.user, style: 'font-size: 1rem;font-family: "Playfair Display";white-space: nowrap;') %>
                            </div>
                            <%= render 'posts/partials/views_and_comments', post: post %>
                          </div>
                          <p class="m-0"><%= date_to_words(post.publish_at) %></p>
                        </div>
                      <% end %>
                    </div>
                    <% if @newsletter.action_button.present? %>
                      <a target="_blank" href="<%= @button_link %>"style="background:#20e277;text-decoration:none !important; font-weight:500; margin-top:35px; color:#fff;text-transform:uppercase; font-size:14px;padding:10px 24px;display:inline-block;border-radius:50px;"><%= @button_text %></a>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td style="height:40px;">&nbsp;</td>
                </tr>
              </table>
            </td>
            <tr>
              <td style="height:20px;">&nbsp;</td>
            </tr>
            <tr>
              <td style="text-align:center;">
                <p style="font-size:16px; color:rgba(69, 80, 86, 0.7411764705882353); line-height:18px; margin:0 0 0;">&copy; <strong>www.theteenmagazine.com</strong></p>
              </td>
            </tr>
            <tr>
              <td style="height:4px;">&nbsp;</td>
            </tr>
            <tr class="bottom_links">
              <td align="center">
                <span style="font-size:12px; color:rgba(69, 80, 86, 0.7411764705882353); line-height:18px; margin:0 0 0;">
                  Sent to <%= @newsletter.audience %>
                </span>
                <span style="font-size:12px; color:rgba(69, 80, 86, 0.7411764705882353); line-height:18px; margin:0 0 0; padding-left: 4px;">-</span>
                <a style="font-size:12px; color:rgba(69, 80, 86, 0.7411764705882353); line-height:18px; margin:0 0 0;" href="https://www.theteenmagazine.com/email-preferences?email=&id=">
                  Email Preferences
                </a>
              </td>
            </tr>
            <tr>
              <td style="height:20px;">&nbsp;</td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    <!--/100% body table-->
  </div>
