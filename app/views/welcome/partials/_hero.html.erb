<div class="parentflex">
  <div class="flexbox">
    <div class="featured divfeatured">
      <div class="featured individual">
        <div class="featured_img">
          <% if @posts_approved_0[0].thumbnail.attached? %>
            <%= link_to(@posts_approved_0[0]) do %>
              <div class="w-100 position-relative">
                <% if @posts_approved_0[0].rank.present? && @posts_approved_0[0].rank <= 10 %>
                  <span class="badge badge-pink" style="position: absolute; z-index: 10000; top: 5px; left: 5px;">trending ðŸ”¥</span>
                <% end %>
                <%= image_tag(@posts_approved_0[0].thumbnail.variant(resize_to_fill: [540,340], format: 'webp'), alt: @posts_approved_0[0].title, class: "image_thumbnail") %>
              </div>
            <% end %>
          <% end %>
        </div>
        <h3 class="article_title"><%= link_to @posts_approved_0[0].title, @posts_approved_0[0] %></h3>
        <div class="d-table-cell align-middle pt-2">
          <div class="author d-inline">
            <% @profile = @posts_approved_0[0].user.profile.attached? ? @posts_approved_0[0].user.profile.variant(resize_to_fill: [100,100]) : "profile_image.jpg" %>
            <%= image_tag(@profile, :class => "profile_img", :style => "max-width: 20px !important; min-width: 20px !important; height: 20px;") %>
            <%= link_to("#{@posts_approved_0[0].user.full_name}, ", @posts_approved_0[0].user, class: 'date') %>
          </div>
          <span>Featured article</span>
        </div>
      </div>
    </div>
    <div class="articles2-6">
      <% @posts_approved_0[1..4].each do |post| %>
        <div class="thumbnail">
          <% if post.thumbnail.attached? %>
            <%=link_to(post) do %>
              <% if post.rank.present? && post.rank <= 8 %>
                <span class="badge badge-pink" style="position: absolute; z-index: 10000; top: 5px; left: 5px;">trending ðŸ”¥</span>
              <% end %>
              <%= image_tag(post.thumbnail.variant(resize_to_fill: [300,150], format: 'webp'), alt: post.title, :class => "image_thumbnail") %>
            <% end %>
          <% end %>
          <div class="thumbnail--container">
            <h3 class="article_title"><%= link_to post.title.truncate_words(14), post %></h3>
            <div class="d-table-cell align-middle pt-2">
              <div class="author d-inline">
                <% @profile = post.user.profile.attached? ? post.user.profile.variant(resize_to_fill: [100,100]) : "profile_image.jpg" %>
                <%= image_tag(@profile, :class => "profile_img", :style => "max-width: 20px !important; min-width: 20px !important; height: 20px;") %>
                <%= link_to("#{post.user.full_name}, ", post.user, class: 'date') %>
              </div>
              <span><%= date_to_words(post.publish_at) %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ads_wrapper ads_responsive">
    <div class="content_hint"></div>
