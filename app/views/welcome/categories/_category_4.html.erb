<div class="ctgry_section big_block">
  <% @posts_approved_4.each do |post| %>
    <div class="ctgry_article">
      <%=link_to(image_tag(post.thumbnail.variant(resize_to_fill: [540,340], format: 'webp'), alt: post.title, class: "image_recent_articles"), post )%>
      <h1><%= link_to post.title, post %></h1>
      <p><%= post.publish_at.in_time_zone.strftime("%A, %b %d")%></p>
      <p class="meta"><%= post.meta_description.truncate_words(15) %></p>
    </div>
  <% end %>
</div>
