<div class="ctgry_section">
  <% @posts_approved_1.each do |post| %>
    <div class="ctgry_article">
      <%=link_to(image_tag(post.thumbnail.variant(resize_to_fill: [540,340], format: 'webp'), alt: post.title), post )%>
      <h1><%= link_to post.title, post %></h1>
      <p><%= date_to_words(post.publish_at) %></p>
    </div>
  <% end %>
</div>
