<meta property="og:url"                content="https://www.theteenmagazine.com/<%= post.slug %>" />
<meta property="og:type"               content="article" />
<meta property="og:site_name"          content="The Teen Magazine" />
<meta property="og:title"              content="<%= post.title %>" />
<% if post.thumbnail.attached? %>
    <meta property="og:image"          content="<%= request.base_url + url_for(post.thumbnail.variant(resize_to_fill: [1200, 630], format: 'webp')) %>" />
    <meta property="og:image:width"    content="1200" />
    <meta property="og:image:height"   content="630" />
<% end %>
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@ttm_magazine">
<meta name="twitter:title" content="<%= post.title %>">
<% if post.thumbnail.attached? %>
    <meta name="twitter:image" content="<%= request.base_url + url_for(post.thumbnail.variant(resize_to_fill: [1600, 900], format: 'webp')) %>">
<% end %>
<meta name="twitter:domain" content="TheTeenMagazine.com">