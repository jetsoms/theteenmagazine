      class="onboarding"
      data-start-event="click"
      data-start-trigger = "#click-event-trigger"
      data-autoscroll="true"
      data-backdrop="true"
    >
    <div id="site-wrapper">
      <%= render "layouts/partials/slide-in-menu" %>
      <%= render "layouts/partials/header-writer-mobile" %>
