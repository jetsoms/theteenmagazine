<div id="banner_writing" class="editor"></div>
<div class="apply_wrapper pitch_form_wrapper">
  <% if (current_user.is_interview_manager?) && (@pitch.status.eql? "Ready for Review") %>
    <%= render "interview_review_form" %>
  <% else %>
    <h1>Edit Interview Pitch</h1>
    <%= render 'interview_form' %>
  <% end %>
  <div class="d-flex flex-direction-row justify-content-end">
    <%= link_to "Delete", pitch_path(@pitch), method: :delete, data: {confirm: "Deleting this pitch cannot be undone. Are you sure you want to continue?"}, style: "margin-top: -35px;" %>
  </div>
</div>
