<% if post.thumbnail.attached? && post.thumbnail_credits.present? %>
    <%= image_set_tag url_for(post.thumbnail.variant(resize_to_fill: [800, 560], format: 'webp')), { 
        url_for(post.thumbnail.variant(resize_to_fill: [550, 385], format: 'webp'))  => '550w', 
        url_for(post.thumbnail.variant(resize_to_fill: [630, 441], format: 'webp')) => '630w', 
        url_for(post.thumbnail.variant(resize_to_fill: [440, 308], format: 'webp')) => '440w', 
        url_for(post.thumbnail.variant(resize_to_fill: [738, 517], format: 'webp')) => '738w', 
        url_for(post.thumbnail.variant(resize_to_fill: [100, 70], format: 'webp')) => '100w', 
        url_for(post.thumbnail.variant(resize_to_fill: [1200, 845], format: 'webp')) => '1200w' 
    }, sizes: '100vw, 800px', id: 'logo', loading: 'lazy', class: img_class, alt: "#{post.title}" %>
<% else %>
    <%= image_tag url_for("thumbnail.png"), loading: 'lazy', class: img_class, alt: "#{post.title}" %>
<% end %>