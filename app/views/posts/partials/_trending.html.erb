<div class="contain_articles">
  <% @trending.each do |post| %>
    <div class="ctgry_article">
      <%= link_to(image_tag(post.thumbnail.url(:medium)), post) %>
      <div class="paragraph">
        <p><%= link_to(post.title.truncate_words(12), post) %></p>
      </div>
    </div>
  <% end %>
</div>
